{% extends template('widget') %}

{% define data = {
    form: _widget.form,
    isVisible: _widget.isVisible,
} %}

{% block body %}
    {{ form_start(data.form) }}

    <div class="quote-request">
        <hr>
        <a class="button button--expand button--hollow" href="{{ path('quote-request/cart/clear') }}" title="{{ 'quote_request_page.quote_request.actions.cancel' | trans }}">
            {{ 'quote_request_page.quote_request.actions.cancel' | trans }}
        </a>
        <hr>
        <button name="save" class="button button--expand button--success">
            {{ 'quote_request_page.quote_request.actions.save' | trans }}
        </button>
        <hr>
        <button name="saveAndBack" class="button button--expand button--success">
            {{ 'quote_request_page.quote_request.actions.save_and_back_to_edit' | trans }}
        </button>
    </div>

    {{ form_end(data.form) }}
{% endblock %}
