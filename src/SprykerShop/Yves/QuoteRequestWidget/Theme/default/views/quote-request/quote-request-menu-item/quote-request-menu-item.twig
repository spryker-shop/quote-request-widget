{% extends template('widget') %}

{% define data = {
    isActivePage: _widget.isActivePage,
    isVisible: _widget.isVisible,
} %}

{% define config = {
    tag: 'li',
    name: 'menu__item' ~ (data.isActivePage ? ' menu__item--active' : ''),
} %}

{% block body %}
    {% if data.isVisible %}
        <a href="{{ url('quote-request') }}"
           data-id="sidebar-quote-request">{{ 'quote_request_widget.request_for_quote.list.title' | trans }}</a>
    {% endif %}
{% endblock %}
